              <div class="icon" id="openMemories" role="button" tabindex="0" aria-label="Our Memories">
                <div class="emoji">📸</div>
                <p>Our Memories</p>
              </div>
              <div class="icon" id="openLetter" role="button" tabindex="0" aria-label="My Letter">
                <div class="emoji">💌</div>
                <p>My Letter</p>
              </div>
            </div>
            <div style="margin-top:10px;color:var(--muted);font-size:13px">(Swipe up or down slightly to navigate through memories)</div>
          </div>
