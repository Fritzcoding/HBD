      </div> <!-- end slides -->

      <!-- music toggle -->
      <div class="music-toggle" id="musicToggle">
        <audio id="bgAudio" loop preload="auto">
          <source src="music/most-beautiful-thing.mp3" type="audio/mpeg">
          <!-- Replace above with the song file. Browsers may block autoplay until user interacts. -->
        </audio>
        <button id="musicBtn">Play Music</button>
      </div>

    </div> <!-- end app -->
  </div>

  <script>
    /* Slide control logic */
    const slides = document.getElementById('slides');
    const total = slides.querySelectorAll('.slide').length;
    let index = 0; // current slide index
    function goTo(i){
      index = Math.max(0, Math.min(total-1, i));
      slides.style.transform = `translateY(-${index*100}%)`;
      // small heart burst on transitions between memories
      if(index>=2 && index<=6) littleHearts();
    }

    // Start button -> go to Menu (1) and start music
    const startBtn = document.getElementById('startBtn');
    const noBtn = document.getElementById('noBtn');
    const musicBtn = document.getElementById('musicBtn');
    const bgAudio = document.getElementById('bgAudio');

    startBtn.addEventListener('click',()=>{
      goTo(1);
      playMusic();
    });
    noBtn.addEventListener('click',()=>{
      alert("Too bad 😚 you're seeing it anyway.");
      goTo(1);
      playMusic();
    });

    function playMusic(){
      bgAudio.play().then(()=>{ musicBtn.textContent='Pause Music'; }).catch(()=>{ musicBtn.textContent='Play Music'; });
    }
    function pauseMusic(){ bgAudio.pause(); musicBtn.textContent='Play Music'; }
    musicBtn.addEventListener('click', ()=>{
      if(bgAudio.paused) playMusic(); else pauseMusic();
    });

    // Icons open
    document.getElementById('openMemories').addEventListener('click', ()=> goTo(2));
    document.getElementById('openLetter').addEventListener('click', ()=> goTo(7));

    // Controls next/back
    document.querySelectorAll('.next').forEach(b=> b.addEventListener('click', (e)=>{
      const action = e.currentTarget.dataset.action;
      if(action === 'next') goTo(index+1);
      else if(action === 'restart') goTo(1);
      else goTo(index+1);
    }));
    document.querySelectorAll('.back').forEach(b=> b.addEventListener('click', ()=> goTo(index-1)));

    // Touch/scroll swipe navigation: small scroll or swipe moves to next/prev - prevents manual page scroll
    let touchStartY = null;
    let touchStartTime = 0;
    const threshold = 40; // px
    const timeThreshold = 400; // ms

    slides.addEventListener('touchstart', (e)=>{
      touchStartY = e.touches[0].clientY;
      touchStartTime = Date.now();
    }, {passive:true});

    slides.addEventListener('touchend', (e)=>{
      if(touchStartY === null) return;
      const deltaY = (e.changedTouches[0].clientY - touchStartY);
      const deltaT = Date.now() - touchStartTime;
      // swipe up for next (negative deltaY)
      if(Math.abs(deltaY) > threshold && deltaT < 800){
        if(deltaY < 0) goTo(index+1); else goTo(index-1);
      }
      touchStartY = null;
    });

    // Small wheel support (desktop)
    let wheelDebounce = false;
    slides.addEventListener('wheel', (e)=>{
      if(wheelDebounce) return; wheelDebounce = true;
      setTimeout(()=> wheelDebounce=false, 500);
      if(e.deltaY > 10) goTo(index+1); else if(e.deltaY < -10) goTo(index-1);
    }, {passive:true});

    /* little hearts on transition */
    const heartsRoot = document.getElementById('hearts');
    function littleHearts(){
      for(let i=0;i<6;i++){
        const h = document.createElement('div');
        h.className='small-heart';
        h.style.left = (20 + Math.random()*60) + '%';
        h.style.top = (60 + Math.random()*30) + '%';
        const size = 8 + Math.random()*12;
        h.style.width = size+'px'; h.style.height = size+'px';
        h.style.opacity = 0.9 - Math.random()*0.4;
        heartsRoot.appendChild(h);
        h.animate([
          { transform: 'translateY(0) scale(0.8)', opacity: h.style.opacity },
          { transform: 'translateY(-160px) scale(1.1)', opacity: 0 }
        ], { duration: 1000 + Math.random()*600, easing: 'cubic-bezier(.2,.9,.2,1)' }).onfinish = ()=> h.remove();
      }
    }

    // optional gentle background floating hearts always
    function spawnBackgroundHearts(){
      const hb = document.createElement('div'); hb.className='small-heart';
      hb.style.left = (5 + Math.random()*90) + '%'; hb.style.top = (30 + Math.random()*40) + '%';
      hb.style.width = (6 + Math.random()*10)+'px'; hb.style.height = (6 + Math.random()*10)+'px'; hb.style.opacity = 0.05 + Math.random()*0.12;
      heartsRoot.appendChild(hb);
      setTimeout(()=> hb.remove(), 8000 + Math.random()*8000);
    }
    setInterval(spawnBackgroundHearts, 1200);

    // Prevent accidental scrolling of body on touch
    document.body.addEventListener('touchmove', function(e){ if(index!==0) e.preventDefault(); }, {passive:false});

    // init at first slide
    goTo(0);

  </script>
</body>
</html>
