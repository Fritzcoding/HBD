    .small-heart:before{top:-6px;left:0}
    .small-heart:after{left:6px;top:0}

    /* music toggle */
    .music-toggle{position:absolute;right:12px;bottom:12px;background:white;border-radius:999px;padding:8px;box-shadow:0 8px 22px rgba(10,10,10,0.12);display:flex;align-items:center;gap:8px}
    .music-toggle button{border:none;background:none;font-weight:600}

    /* responsive */
